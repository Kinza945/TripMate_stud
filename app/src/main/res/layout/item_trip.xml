<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_s"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/card_corner"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_s">

        <ImageView
            android:id="@+id/trip_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/spacing_s"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/trip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/trip_image"
            android:textAppearance="@style/Text.Subtitle"
            android:textStyle="bold"
            android:textColor="@color/onSurface" />

        <TextView
            android:id="@+id/trip_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_title"
            android:layout_toEndOf="@id/trip_image"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/Text.Caption"
            android:textColor="@color/onSurfaceVariant" />

        <TextView
            android:id="@+id/trip_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_location"
            android:layout_toEndOf="@id/trip_image"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/Text.Body"
            android:textColor="@color/onSurfaceVariant" />

        <ImageButton
            android:id="@+id/trip_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/love_names"
            android:padding="6dp"
            android:tint="@color/primary" />

        <ImageButton
            android:id="@+id/trip_remove"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/trip_favorite"
            android:background="@android:color/transparent"
            android:contentDescription="@string/travel_names"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="@color/onSurfaceVariant" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
